# Este é um arquivo de exemplo para configurar o Wrangler, a ferramenta de linha de comando
# do Cloudflare. Renomeie para 'wrangler.toml' para desenvolvimento local, mas NÃO
# envie o arquivo com suas chaves secretas para o GitHub.


name = "pave-react"

# O diretório onde o Vite coloca os arquivos finais do build do frontend.
pages_build_output_dir = "dist"

# Define a compatibilidade do ambiente de execução do Worker.
# Isso garante que seu código se comporte de forma consistente.
compatibility_date = "2025-01-01"

# --- Variáveis de Ambiente para Desenvolvimento Local ---
# Estas variáveis são usadas apenas quando você roda 'wrangler pages dev'.
# Para produção, configure no Cloudflare Pages.
[vars]
CF_ENV = "development"

PAVE_UPLOADER_BASE_URL = "https://example-uploader.your-domain.workers.dev"
PAVE_UPLOADER_ADMIN_USER = "<uploader-admin-user>"
PAVE_UPLOADER_ADMIN_PASSWORD = "<uploader-admin-password>"

# --- Bindings de Recursos da Cloudflare ---
# Conectam suas funções aos serviços da Cloudflare (R2, AI, etc.).
# Para produção, você DEVE configurar bindings correspondentes no Dashboard.

# Conecta ao seu Bucket R2 onde as questões estão armazenadas.
[[r2_buckets]]
binding = "QUESTOES_PAVE_BUCKET" # Nome da variável para acessar o bucket no código (env.QUESTOES_PAVE_BUCKET)
bucket_name = "<your-r2-bucket-name>" # Nome real do bucket que você criou no R2


